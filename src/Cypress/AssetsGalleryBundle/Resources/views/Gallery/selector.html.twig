{% extends "AssetsGalleryBundle::base.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/assetsgallery/css/treeview/jquery.treeview.css') }}" media="screen, projection" rel="stylesheet" type="text/css" />
{% endblock %}
    
{% block javascripts %}
    {{ parent() }}
    {% javascripts "@AssetsGalleryBundle/Resources/javascripts/treeview.js" filter="?yui_js" output="js/list.js" %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block content %}
    <ul class="treeview">
        {% include "AssetsGalleryBundle:Slices:folder_tree_branch.html.twig" with { 'folder': root } %}
    </ul>
{% endblock %}