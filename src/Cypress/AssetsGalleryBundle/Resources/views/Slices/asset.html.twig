<article class="asset">
    <img src="{{ (base_path ~ asset.filename) | apply_filter('cypress_assets_gallery_asset') }}" alt="{{ asset.name }}" title="{{ asset.name }}" />
    <h2>{{ asset.name }}</h2>
    <a href="{{ path('cypress_gallery_asset_delete', {'id': asset.id }) }}" class="action first delete">delete</a>
    <a href="{{ path('cypress_gallery_asset_manage', {'id': asset.id }) }}" class="action second">edit</a>
</article>