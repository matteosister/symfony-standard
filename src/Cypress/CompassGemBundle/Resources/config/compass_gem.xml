<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
        
    <parameters>
        <parameter key="cypress_compass_gem.compass_gem.class">Cypress\CompassGemBundle\Assetic\Filter\CompassFilter</parameter>
        <parameter key="cypress_compass_gem.compass_gem.compass_path">/var/lib/gems/1.8/bin/compass</parameter>
    </parameters>
    
    <services>
        <service id="cypress_compass_gem.compass_gem" class="%cypress_compass_gem.compass_gem.class%">
            <argument>%cypress_compass_gem.compass_gem.compass_path%</argument>
            <tag name="assetic.filter" alias="compass_gem" />
        </service>
    </services>
</container>
