<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            {% stylesheets '@screen_css' %}
                <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
            {% endstylesheets %}
            {% javascripts "@CmsBundle/Resources/javascripts/*.js" filter="?yui_js" %}
                <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}
        {% block javascripts %}{% endblock %}
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body class="bp">
        <section id="container">
            {% block header %}
            <header>
                <h1><a href="{{ path('be_dashboard') }}">Webadmin</a></h1>
                <nav>
                    <a href="{{ path('be_page_list') }}">pagine</a>
                </nav>
            </header>
            {% endblock %}
            {% block body %}{% endblock %}
        </section>
    </body>
</html>